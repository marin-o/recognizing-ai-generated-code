{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File with Args",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--eval",
                "--batch-size",
                "32"
            ]
        }
    ]
}